{
    "manifest_version": 3,

    "name": "ChatGPT++",
    "version": "1.2",
    "host_permissions": [
        "*://chat.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://chat.openai.com/*"
            ],
            "css": [
                "fix-margins.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}